<h2>Create a new game:</h2>
<%= form_with scope: :game, url: games_path, local: true do |form| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@game.errors.count, "error") %> prohibited
        this game from being saved:
        </h2>
      <ul>
        <% @game.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= label_tag(:name) %>
    <%= text_field_tag(:name) %>
  </p>
  <p>
    Starting chips:
    <table>
      <% ChipCount.chip_types.each do |chip_type| %>
        <tr>
          <td><%= label_tag("chip_#{chip_type[0]}", chip_type[0]) %></td>
          <td><%= text_field_tag("chip_#{chip_type[0]}", nil, size: 4) %></td>
        </tr>
      <% end %>
    </table>
  </p>

  <p>
    <%= submit_tag("Add game") %>
  </p>
<% end %>

<%= link_to 'Back', games_path %>
